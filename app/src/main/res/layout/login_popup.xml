<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150dp">
    <TextView
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/popup_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localhost says"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:id="@+id/login_successfully"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Successfully, Welcome to Admin!"
        android:textSize="20dp"
        android:layout_below="@+id/popup_login"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="OK"
        android:background="@color/colorPrimary"
        android:textColor="@color/White"
        android:layout_below="@+id/login_successfully"/>

</RelativeLayout>